<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/selectorimage">

        <ImageView
            android:id="@+id/imgViewMonAn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTenMonAn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Tên món ăn"
            android:textSize="21sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/txtThoiGianMonAn"
            app:layout_constraintStart_toStartOf="@+id/imgViewMonAn"
            app:layout_constraintTop_toBottomOf="@+id/imgViewMonAn" />

        <TextView
            android:id="@+id/txtThoiGianMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            app:layout_constraintEnd_toEndOf="@+id/imgViewMonAn"
            app:layout_constraintTop_toBottomOf="@+id/imgViewMonAn" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>